				<orientation>horizontal</orientation>
				<viewtype label="Netflix">wraplist</viewtype>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout height="255" width="352">
					<control type="image">
                        <left>2</left>
                        <top>-1</top>
                        <right>0</right>
                        <bottom>59</bottom>
                        <texture border="10">common/nofocus-shadow10.png</texture>
                    </control>
					<control type="image">
						<left>11</left>
						<top>9</top>
						<right>9</right>
