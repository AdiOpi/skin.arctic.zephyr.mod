				<right>SidePad</right>
				<left>80</left>
				
				<visible>Container.Content(movies)</visible>
                
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <ondown>1615</ondown>
                <preloaditems>2</preloaditems>
