<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

   <include name="View_506_Slider">
    
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(506)</visible>
         
            
            <control type="group">
                <top>PosterPad</top>
                <left>SidePad</left>
                <right>SidePad</right>
                <height>640</height>
                <control type="image">
                    <left>-8</left>
                    <right>-8</right>
                    <top>-8</top>
                    <bottom>-8</bottom>
                    <texture border="15" colordiffuse="Panel">common/rounded-shadow8.png</texture>
                </control>
			
                <control type="wraplist" id="506">
                    <top>0</top>
                    <left>0</left>
                    <width>1760</width>
                    <right>0</right>
                    <top>0</top>
                    <bottom>0</bottom>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <ondown>60</ondown>
					<focusposition>0</focusposition>
                    <onleft>51</onleft>
                    <onright>51</onright>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>60</pagecontrol>
                    <orientation>horizontal</orientation>
                    <viewtype label="Slider">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb.png">$VAR[FanartImage]</texture>
                        </control>
                    </itemlayout>

                    <focusedlayout height="640" width="1452">
                        <control type="image">
                            <top>0</top>
                            <right>-330</right>
                            <height>648</height>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb.png">$VAR[FanartImage]</texture>
                        </control>
						
                    </focusedlayout>
                </control>
				<control type="image">
                        <left>0</left>
                        <right>0</right>
                        <bottom>0</bottom>
                        <height>70</height>
                        <texture border="15" colordiffuse="df000000">common/white.png</texture>
                    </control>
				
				<control type="group">
					
                    <left>30</left>
                    <right>100</right>
                    <top>560</top>
                    <bottom>30</bottom>
					<orientation>horizontal</orientation>
                    <control type="label">
                        <top>10</top>
                        <aligny>center</aligny>
                        <height>64</height>
                        <font>SmallBold</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite100</textcolor>
                        <selectedcolor>PanelWhite100</selectedcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <top>10</top>
                        <align>right</align>
                        <height>64</height>
                        <font>SmallBold</font>
                        <scroll>true</scroll>
                        <textcolor>PanelWhite100</textcolor>
                        <selectedcolor>PanelWhite100</selectedcolor>
                        <label>$INFO[ListItem.Size]</label>
						<right>-60</right>
                    </control>
                    
                </control>
                
            
            </control>
            <include>Furniture_Scrollbar_Horizontal</include>
        </control>
    </include>
	
	
	
	
	
	
	
	
	
	
	
	
	
</includes>

